<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="http://kendo.cdn.telerik.com/2017.2.504/styles/kendo.common.min.css">
    <link rel="stylesheet" href="http://kendo.cdn.telerik.com/2017.2.504/styles/kendo.default.min.css">


    <script src="http://code.jquery.com/jquery-1.12.3.min.js"></script>
    <script src="http://kendo.cdn.telerik.com/2017.2.504/js/kendo.all.min.js"></script>
	<script src="http://kendo.cdn.telerik.com/2017.2.504/js/kendo.aspnetmvc.min.js"></script>
    <script src="http://kendo.cdn.telerik.com/2017.2.504/js/kendo.timezones.min.js"></script>

    @{
        var culture = System.Threading.Thread.CurrentThread.CurrentCulture.ToString();
    }

    <script src="http://kendo.cdn.telerik.com/2017.2.504/js/cultures/kendo.culture." + culture + ".min.js"></script>

    @* Set the current culture *@
    <script>
        kendo.culture("@culture");
    </script>
</head>
	<body>
		<header>
			<div class="content-wrapper">
				<div class="float-left">
					<p class="site-title">@Html.ActionLink("KendoUI Scheduler WebAPI demo", "Index", "Home")</p>
				</div>
				<div class="float-right">
					<nav>
						<ul id="menu">
							<li>@Html.ActionLink("Home", "Index", "Home")</li>
							<li>@Html.ActionLink("About", "About", "Home")</li>
							<li>@Html.ActionLink("Contact", "Contact", "Home")</li>
						</ul>
					</nav>
				</div>
			</div>
		</header>
		<div id="body">
			@RenderSection("featured", required: false)
			<section class="content-wrapper main-content clear-fix">
				@RenderBody()
			</section>
		</div>

		<footer>
			<div class="content-wrapper">
				<div class="float-left">
					<p>&copy; @DateTime.Now.Year - My KendoUI Scheduler WebAPI Demo Application</p>
				</div>
			</div>
		</footer>
	</body>
</html>
