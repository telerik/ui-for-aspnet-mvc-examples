<script type="text/javascript">
    //Destroy the window after close to allow opening multiple windows
    function onClose(e) {
        itemForDelete = $(this.element);
        this.destroy();
        itemForDelete.remove();
    }
</script>



@(Html.Kendo()
		.Window()
		.Name("window")
		.Title("My Window Title")
		.Content(@<text>This is the content of a window, opened with ajax.</text>)
		.Modal(true)
		.Actions(a => a.Close())
		.Draggable()
		.Resizable()
		.Width(400)
		.Height(300)
        .Events(e => e.Close("onClose"))
	  )

