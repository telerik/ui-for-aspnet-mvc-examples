@using Kendo.Mvc.UI

﻿@model IEnumerable<Telerik.Examples.Mvc.Areas.GridCustomServerBinding.Models.GridCustomServerBindingOrder>

@{
    ViewBag.Title = "Index";
}

@(Html.Kendo().Grid(Model)
    .Name("Grid")
    .EnableCustomBinding(true)
    .Columns(columns => {
        columns.Bound(o => o.OrderID);
        columns.Bound(o => o.ShipAddress);
    })
    .Pageable()
    .Sortable()
    .Scrollable()
    .DataSource(dataSource => dataSource
        .Server()
        .Total((int)ViewData["total"]) // set the total number of records
    )
)
